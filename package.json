{
  "private": true,
  "engines": {
    "node": ">= 10.14.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npm run install-security-fixes",
    "install-security-fixes": "cd ./packages/angular && npm i",
    "audit-check": "npm audit && cd packages/node && npm audit && cd ../angular && npm audit",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "test": "lerna run test",
    "test-ci": "lerna run test-ci",
    "publish": "lerna publish from-package --no-git-reset --no-private --yes --no-verify-access --pre-dist-tag next",
    "gen-dependencies": "node .github/workflows/generate-dependencies.js"
  },
  "name": "cloud-director-typescript-clients"
}
